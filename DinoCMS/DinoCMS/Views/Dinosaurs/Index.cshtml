<div class="text-center">
    <h1>All Dinosaurs</h1>
    <div class="container">
        <table class="table">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Diet)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PackLimits)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <th>
                            <a class="btn btn-primary" asp-action="Create">Create New</a>
                        </th>
                    }
                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <th>  </th>
                    }

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Diet)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PackLimits)
                        </td>
                        <td>
                            <img src="@item.Image" alt="Alternate Text" />
                        </td>
                        <td>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                            }
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID">Details</a>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                            }
                        </td>
                        <td>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
  </div>
