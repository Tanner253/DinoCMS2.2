@model IEnumerable<DinoCMS.Models.Dinosaur>

@{
    ViewData["Title"] = "Index";
}

<h1>All Dinosaurs</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackLimits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackLimits)
            </td>
            <td>
                <img src="@item.Image" alt="Alternate Text" />
            </td>
            <td>
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID">Details</a> 
                <a class="btn btn-info" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
