@page
@model DinoCMS.CreateDinoModel

@{
    ViewData["Title"] = "CreateDino";
    Layout = "_layout";
}
<link rel="stylesheet" href="~/css/site.css" />
<link href="~/css/Home.css" rel="stylesheet" />

<h1>CreateDino</h1>

<h4>Dinosaur</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dinosaur.Name" class="control-label"></label>
                <input asp-for="Dinosaur.Name" class="form-control" />
                <span asp-validation-for="Dinosaur.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinosaur.Diet" class="control-label"></label>
                <select asp-for="Dinosaur.Diet" asp-items="@Html.GetEnumSelectList<DinoCMS.Models.Dinosaur.Food>()" class="form-control"></select>
                <span asp-validation-for="Dinosaur.Diet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinosaur.NeedToKnow" class="control-label"></label>
                <textarea asp-for="Dinosaur.NeedToKnow" class="form-control" ></textarea>
                <span asp-validation-for="Dinosaur.NeedToKnow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinosaur.Behavior" class="control-label"></label>
                <textarea asp-for="Dinosaur.Behavior" class="form-control" ></textarea>
                <span asp-validation-for="Dinosaur.Behavior" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinosaur.SocialInteraction" class="control-label"></label>
                <textarea asp-for="Dinosaur.SocialInteraction" class="form-control" ></textarea>
                <span asp-validation-for="Dinosaur.SocialInteraction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinosaur.PackLimits" class="control-label"></label>
                <input asp-for="Dinosaur.PackLimits" class="form-control" />
                <span asp-validation-for="Dinosaur.PackLimits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinosaur.Image" class="control-label"></label>
                <input asp-for="Dinosaur.Image" class="form-control" />
                <span asp-validation-for="Dinosaur.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dinosaur.Additionalinfo" class="control-label"></label>
                <textarea asp-for="Dinosaur.Additionalinfo" class="form-control" ></textarea>
                <span asp-validation-for="Dinosaur.Additionalinfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./List">Back to List</a>
</div>

