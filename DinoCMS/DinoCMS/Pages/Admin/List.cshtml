@page
@model DinoCMS.ListModel

@{
    ViewData["Title"] = "List";
    Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/site.css" />
<link href="~/css/Home.css" rel="stylesheet" />
<h1>List</h1>

<p>
    <a class="btn-primary" asp-page="./CreateDino">Create New</a>
</p>
<div class="text-center">
    <h1>All Dinosaurs</h1>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Dinosaur[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dinosaur[0].Diet)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Dinosaur[0].Image)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Dinosaur)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Diet)
                        </td>
                        
                        <td>
                            <img src="@item.Image" alt="" />
                 
                        </td>
                        <td>
                            <a class="btn-primary" asp-page="./ProductEdit" asp-route-id="@item.ID">Edit</a> |
                            <a class="btn-primary" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                            <a class="btn-primary" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>  
    </div>
